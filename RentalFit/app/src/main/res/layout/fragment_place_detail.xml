<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.place.PlaceDetailFragment">

    <!-- 장소 이미지 -->

    <!-- 장소 위치 -->
    <ImageView
        android:id="@+id/imageViewPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop" /> <!-- 이미지 비율에 맞게 꽉 채움 -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:theme="@style/TextView_Place_Description"
        app:layout_constraintTop_toBottomOf="@id/imageViewPlace">

        <TextView
            android:id="@+id/textViewLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 위치"/>
        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 위치"/>

        <TextView
            android:id="@+id/textViewCapacityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원 수"/>
        <TextView
            android:id="@+id/textViewCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 설명"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
